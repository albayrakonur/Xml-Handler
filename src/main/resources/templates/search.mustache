<html>
    <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>My application deployed automatically</title>
        <body style="background-color:#B71E46;">
            <div class="row">
                <div class="col">
                    <form action="search" method="post">
                    <p style="margin-top:10px;margin-left:10px;color:#fbfbfb;">Firstname</p>
                    <textarea style="margin-left:5px;" name="input1" rows="5" cols="15"></textarea>
                    <p style="margin-top:10px;margin-left:10px;color:#fbfbfb;">Lastname</p>
                    <textarea style="margin-left:5px;" name="input2" rows="5" cols="15"></textarea>
                    <br>
                    <input style="margin-top:20px;margin-left:5px;" type="submit">
                    </form>
                </div>
                <div class="col">
                    {% for product in products %}
                    
                    <li class="list-group-item">
                    <div class="card col-md-6 offset-md-3 " style="padding:3px">
                        <div class="card-body">
                        <ul class="list-group">
                            <li class="list-group-item">
                            <p class="card-text">Brand: {{product.marka}}</p>
                            </li>
                            <li class="list-group-item">
                            <p class="card-text">Model: {{product.model}}</p>
                            </li>
                            <li class="list-group-item">
                                <p class="card-text">Price: {{product.fiyat}}</p>
                            </li>
                        </ul>
                        </div>
                    </div>
                    </li>
                    {% endfor %}
                </div>
            </div>
        </body>
    </head>
</html>
  
